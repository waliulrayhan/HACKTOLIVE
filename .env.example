# ==============================================
# HACKTOLIVE - Environment Variables Template
# ==============================================
# Copy this file and configure for your environment:
# - .env.development (local development)
# - .env.production (production server)
# ==============================================

# ---------------------------------------------
# DATABASE CONFIGURATION
# ---------------------------------------------
# MySQL Database Connection String
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
# Local Development:
DATABASE_URL="mysql://root:password@localhost:3306/hacktolive"
# Production (on server):
# DATABASE_URL="mysql://root:HackTo@Live2026@localhost:3306/hacktolive"

# ---------------------------------------------
# JWT AUTHENTICATION
# ---------------------------------------------
# Secret key for JWT token signing (MUST be changed in production)
# Production uses: H4ckT0L1v3_JWT_S3cr3t_K3y_2026_Pr0duct10n_S3cur3_R4nd0m
JWT_SECRET="change-this-to-a-random-secret-key-minimum-32-characters"
# Token expiration time (e.g., 7d, 24h, 60m)
JWT_EXPIRES_IN="7d"

# ---------------------------------------------
# FRONTEND CONFIGURATION
# ---------------------------------------------
# Frontend URLs (comma-separated for multiple origins)
# Development:
FRONTEND_URL="http://localhost:3000"
# Production (on server):
# FRONTEND_URL="https://hacktolive.io"

# ---------------------------------------------
# SERVER CONFIGURATION
# ---------------------------------------------
# Backend server port
PORT=4000
# Node environment (development | production)
NODE_ENV="development"

# ---------------------------------------------
# UPLOAD CONFIGURATION
# ---------------------------------------------
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760
# Upload directory path
UPLOAD_PATH="./uploads"

# ---------------------------------------------
# NEXT.JS FRONTEND (Frontend Environment)
# Create frontend/.env with these variables
# ---------------------------------------------
# API endpoint URL
# Development:
NEXT_PUBLIC_API_URL=http://localhost:4000
# Production (on server):
# NEXT_PUBLIC_API_URL=https://api.hacktolive.io

# Site URL
# Development:
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Production (on server):
# NEXT_PUBLIC_SITE_URL=https://hacktolive.io

# Site name
NEXT_PUBLIC_SITE_NAME=HackToLive

# Upload URL
NEXT_PUBLIC_UPLOAD_URL=http://localhost:4000/uploads
