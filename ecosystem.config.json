{
  "apps": [
    {
      "name": "hacktolive-backend",
      "script": "dist/main.js",
      "cwd": "/home/your-username/public_html/backend",
      "instances": 1,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3001
      },
      "error_file": "logs/backend-error.log",
      "out_file": "logs/backend-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "autorestart": true,
      "max_memory_restart": "500M",
      "watch": false
    },
    {
      "name": "hacktolive-frontend",
      "script": "server.js",
      "cwd": "/home/your-username/public_html",
      "instances": 1,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "error_file": "logs/frontend-error.log",
      "out_file": "logs/frontend-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "autorestart": true,
      "max_memory_restart": "1G",
      "watch": false
    }
  ]
}
